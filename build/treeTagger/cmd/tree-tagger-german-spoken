#!/bin/sh

# Set these paths appropriately

BIN="/home/neo/environments/tarsqi/treeTagger/bin"
CMD="/home/neo/environments/tarsqi/treeTagger/cmd"
LIB="/home/neo/environments/tarsqi/treeTagger/lib"

OPTIONS="-token -lemma -sgml -pt-with-lemma"

TOKENIZER=${CMD}/utf8-tokenize.perl
ABBR_LIST=${LIB}/german-abbreviations
TAGGER=${BIN}/tree-tagger
PARFILE=${LIB}/german-spoken.par

$TOKENIZER -a $ABBR_LIST $* |
# tagging
$TAGGER $OPTIONS $PARFILE
